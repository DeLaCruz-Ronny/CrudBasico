@model List<CrudMaterias.Models.Clase>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Materias Activas</h1>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Universidad">Crear</a>
    </div>
    <div class="col-10 mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Creditos</th>
                    <th>Maestros</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
               {
                   <tr>
                       <td>@item.Descripcion</td>
                       <td>@item.Creditos</td>
                       <td>@item.Mestro</td>
                       <td>
                           <a class="btn btn-primary" asp-action="Edit" asp-controller="Universidad" asp-route-IdMateria="@item.IdMateria">Editar</a> | 
                           <a class="btn btn-danger" asp-action="Delete" asp-controller="Universidad" asp-route-IdMateria="@item.IdMateria">Eliminar</a>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
</div>

